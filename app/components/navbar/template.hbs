<nav class="navbar navbar-light mt-4">
  <a class="navbar-brand" href="#">
    <img src="png/logo.png" width="30" height="30" class="d-inline-block align-top" alt="product-logo">
    FoodiePro
  </a>
  <div class="right-nav d-flex align">
    {{#if @login}}
      <button class="btn btn-outline-dark" {{action "toggleModal"}}  type="button">Login</button>
      <button  class="btn btn-outline-dark" type="button">Sign Up</button>
    {{else}}
      <LinkTo @route="home"class="btn btn-outline-dark">Home</LinkTo>
      <LinkTo @route="orders"class="btn btn-outline-dark">Orders</LinkTo>
      <div {{action "toggleFlyout"}} class="cart-container">
        <img src="png/cart.png" width="30px" height="30px">
        <span class="order-count rounded-pill">{{this.orderCount}}</span>
      </div>
    {{/if}}
  </div>
</nav>
{{#if this.isShowingModal}}
  {{#modal-dialog onClose=(action "toggleModal") targetAttachment="center" translucentOverlay=true}}
    Login!
  {{/modal-dialog}}
{{/if}}
{{#if this.isOpen}}
  <Flyout @isOpen={{this.isOpen}} @closeFlyout={{action "toggleFlyout"}}></Flyout>
{{/if}}