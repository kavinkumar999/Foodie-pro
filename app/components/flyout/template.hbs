<div class="flyout {{if @isOpen "is-visible"}}">
  <div class="flyout__content">
    <div class="flyout-top">
      <img {{action "closeFlyout"}} class="cursor-pointer" src="png/l-arrow.png" width="40px" height="40px">
      <div>Cart</div>
      <div {{action "clearData"}} class="cursor-pointer">Clear Data</div>
    </div>
    <div class="flyout-body">
      <div class="flyout-items mt-2">
        {{#each-in this.foodCartItems as |key item|}}
          <div class="d-flex flex-row justify-content-around position-relative">
            <div class="close-button" {{action "removeItem" item}}>
              {{svg-jar "close" height="20px" width="20px"}}
            </div>
            <img class="rounded-pill" width="50px" height="50px" src="png/{{item.image}}" alt="food">
            <div>{{item.name}}</div>
            <div class="d-flex flex-row gap-4">
              <div {{action "minusQuantity" item}} class="manipulation">-</div>
              <div>{{item.count}}</div>
              <div {{action "addQuantity" item}} class="manipulation">+</div>
            </div>
          </div>
        {{else}}
          {{svg-jar "empty-cart"}}
        {{/each-in}}
      </div>
      <div class="flyout-total">
        <div class="d-flex justify-content-between mt-4">
          <div>Sub Total</div>
          <div>{{this.subTotal}}</div>
        </div>
        <div class="d-flex justify-content-between mt-4">
          <div>Delivery</div>
          <div>{{this.delivery}}</div>
        </div>
        <div class="d-flex justify-content-between mt-4"></div>
        <div class="border"></div>
        <div class="d-flex justify-content-between mt-4">
          <div>Total</div>
          <div>{{this.total}}</div>
        </div>
        <button class="btn btn-success mt-5" type="button">Proceed to checkout</button>
      </div>
    </div>
  </div>
</div>